{
  "name": "apex-code-coverage-transformer",
  "description": "Transform Salesforce Apex code coverage JSONs created during deployments and test runs into other formats accepted by SonarQube, GitHub, GitLab, Azure, Bitbucket, etc.",
  "version": "2.12.0",
  "dependencies": {
    "@oclif/core": "^4.3.0",
    "@salesforce/core": "^8.11.4",
    "@salesforce/sf-plugins-core": "^12.2.1",
    "async": "^3.2.6",
    "xmlbuilder2": "^3.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.1",
    "@oclif/plugin-command-snapshot": "^5.2.40",
    "@salesforce/cli-plugins-testkit": "^5.3.39",
    "@salesforce/dev-config": "^4.3.1",
    "@salesforce/prettier-config": "^0.0.3",
    "@salesforce/ts-sinon": "^1.4.30",
    "@types/async": "^3.2.24",
    "@types/jest": "^29.5.14",
    "@types/node": "18",
    "@types/sinon": "^17.0.4",
    "eslint-config-salesforce-typescript": "^3.4.0",
    "eslint-plugin-sf-plugin": "^1.20.21",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "oclif": "^4.17.46",
    "prettier": "^3.5.3",
    "pretty-quick": "^4.2.2",
    "shx": "0.4.0",
    "sinon": "^21.0.0",
    "ts-jest": "^29.3.4",
    "ts-jest-mock-import-meta": "^1.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "wireit": "^0.14.12"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "/lib",
    "/messages",
    "/oclif.manifest.json",
    "/oclif.lock",
    "/CHANGELOG.md"
  ],
  "keywords": [
    "force",
    "salesforce",
    "salesforcedx",
    "sf",
    "sf-plugin",
    "sfdx",
    "sfdx-plugin",
    "xml",
    "json",
    "sonarqube",
    "apex",
    "coverage",
    "git",
    "cobertura",
    "clover",
    "converter",
    "transformer",
    "code",
    "quality",
    "validation",
    "deployment",
    "gitlab",
    "github",
    "azure",
    "bitbucket",
    "jacoco",
    "lcov",
    "json2xml"
  ],
  "license": "MIT",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "sf",
    "topicSeparator": " ",
    "topics": {
      "acc-transformer": {
        "description": "description for acc-transformer"
      }
    },
    "hooks": {
      "postrun": "./lib/hooks/postrun"
    },
    "devPlugins": [
      "@oclif/plugin-help"
    ],
    "flexibleTaxonomy": true
  },
  "scripts": {
    "command-docs": "oclif readme",
    "build": "wireit",
    "clean:package-manager": "wireit",
    "clean": "wireit",
    "clean:lib": "shx rm -rf lib && shx rm -rf coverage && shx rm -rf .nyc_output && shx rm -f oclif.manifest.json oclif.lock",
    "compile": "wireit",
    "lint": "wireit",
    "postpack": "shx rm -f oclif.manifest.json oclif.lock",
    "prepack": "wireit",
    "prepare": "husky install",
    "test": "wireit",
    "test:nuts": "oclif manifest && jest --testMatch \"**/*.nut.ts\"",
    "test:only": "wireit",
    "version": "oclif readme"
  },
  "publishConfig": {
    "access": "public"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "compile",
        "lint"
      ]
    },
    "clean": {
      "command": "shx rm -rf 'reports/*' .nyc_output oclif.manifest.json package.tgz 'stderr*.txt' 'stdout*.txt'",
      "files": [
        "lib",
        "reports/*",
        ".nyc_output",
        "oclif.manifest.json",
        "package.tgz",
        "stderr*.txt",
        "stdout*.txt"
      ],
      "dependencies": [
        "clean:build"
      ]
    },
    "clean:build": {
      "command": "shx rm -rf lib",
      "files": [
        "lib/*"
      ]
    },
    "clean:package-manager": {
      "command": "shx rm -rf node_modules tsconfig.tsbuildinfo .wireit",
      "files": [
        "node_modules/*"
      ]
    },
    "compile": {
      "command": "tsc -p . --pretty --incremental",
      "files": [
        "src/**/*.ts",
        "**/tsconfig.json",
        "messages/**"
      ],
      "output": [
        "lib/**",
        "*.tsbuildinfo"
      ],
      "clean": "if-file-deleted"
    },
    "format": {
      "command": "prettier --write \"+(src|test|schemas)/**/*.+(ts|js|json)|command-snapshot.json\"",
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "schemas/**/*.json",
        "command-snapshot.json",
        ".prettier*"
      ],
      "output": []
    },
    "lint": {
      "command": "eslint src test --color --cache --cache-location .eslintcache",
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "messages/**",
        "**/.eslint*",
        "**/tsconfig.json"
      ],
      "output": []
    },
    "prepack": {
      "command": "oclif manifest && oclif --version && oclif lock && npm shrinkwrap",
      "files": [
        "src/commands/sgd/source/delta.ts",
        "messages/delta.md",
        "README.md"
      ],
      "dependencies": [
        "build"
      ],
      "output": [
        "README.md"
      ],
      "clean": false
    },
    "test:compile": {
      "command": "tsc -p \"./test\" --pretty",
      "files": [
        "test/**/*.ts",
        "**/tsconfig.json"
      ],
      "output": []
    },
    "test": {
      "dependencies": [
        "test:compile",
        "test:only",
        "lint"
      ]
    },
    "test:only": {
      "command": "jest --coverage",
      "env": {
        "FORCE_COLOR": "2"
      },
      "files": [
        "test/**/*.ts",
        "src/**/*.ts",
        "**/tsconfig.json",
        ".mocha*",
        "!*.nut.ts",
        ".nycrc"
      ],
      "output": []
    },
    "test:command-reference": {
      "command": "\"./bin/dev\" commandreference:generate --erroronwarnings",
      "files": [
        "src/**/*.ts",
        "messages/**",
        "package.json"
      ],
      "output": [
        "tmp/root"
      ]
    },
    "test:deprecation-policy": {
      "command": "\"./bin/dev\" snapshot:compare",
      "files": [
        "src/**/*.ts"
      ],
      "output": [],
      "dependencies": [
        "compile"
      ]
    },
    "test:json-schema": {
      "command": "\"./bin/dev\" schema:compare",
      "files": [
        "src/**/*.ts",
        "schemas"
      ],
      "output": []
    }
  },
  "exports": "./lib/index.js",
  "type": "module",
  "author": "Matt Carvin",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mcarvin8/apex-code-coverage-transformer.git"
  },
  "bugs": {
    "url": "https://github.com/mcarvin8/apex-code-coverage-transformer/issues"
  }
}
